


<!-- BANNER CENTRALE-->

<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path "background-banner.jpg" %>');">
  <div class="banner-content">
    <h1>Wagon Hunt</h1>
    <p>Find new awesome products</p>
    <%= link_to "See the products", products_path, class:"btn btn-success btn-lg" %>
  </div>
</div>

<div class="container padded" align="center">
  <div class="row">
    <% Category.all.each do |cat| %>
    <div class="col-xs-12 col-sm-3">
      <%= link_to cat.name, products_path(category_id: cat.id), class: "card_category" %>
    </div>
    <% end %>



  </div>
</div>

