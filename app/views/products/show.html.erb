
<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path "http://unsplash.it/1600/?random" %>');">
  <div class="banner-content">
    <h1><%= @product.name %></h1>
    <p><%= @product.tagline %> | <%= @product.category.name %></p>

      <% if @product.user != nil %>
        <h6>Posted by : <%= @product.user.email %></h6>
      <% end %>
    <%= link_to "See it live !", @product.url, class: "btn btn-primary" %>
  </div>
</div>
