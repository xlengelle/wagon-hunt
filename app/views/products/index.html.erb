<div class="container">

  <div class="row">

    <div class="col-xs-12 col-sm-10 col-sm-offset-1">

      <h1 class="text-center">Wagon Hunt - Product List</h1>
      <h2 class="text-center">Here are our awesome products</h2>

          <% @products.each do |product| %>

            <div class="product">
              <div class='product-upvote'>
                <div class="product-arrow"></div>
                <div class='product-count'>0</div>
              </div>
              <img src="<%= image_path "http://unsplash.it/300/200/?random" %>"
              class="product-image hidden-xs" alt="<%= product.name %>">
              <div class='product-body'>
                <h3><%= product.name %></h3>
                <p><%= product.tagline %> <h6><i><%= product.category.name %></i></h6></p>
              </div>
              <ul class="list-inline product-controls hidden-sm hidden-xs">
                <li>
                  <%= link_to product_path(product) do %>
                    <i class="fa fa-eye"></i>
                  <% end %>
                </li>

                <li>
                  <%= link_to edit_product_path(product) do %>
                    <i class="fa fa-pencil"></i>
                  <% end %>
                </li>

                <li>
                  <%= link_to product_path(product), method: :delete do %>
                    <i class="fa fa-trash"></i>
                  <% end %>
                </li>

              </ul>
            </div>

          <% end %>




    </div>

  </div>

</div>







